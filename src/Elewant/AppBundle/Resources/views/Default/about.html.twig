<section id="about" class="index-section">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{ 'site.about.heading'|trans }}</h2>
                <h3 class="section-subheading text-muted">{{ 'site.about.subtext'|trans }}</h3>
            </div>
        </div>

        <div class="row text-center">
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-user fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">{{ 'site.about.step-1-heading'|trans }}</h4>
                <p class="text-muted">{{ 'site.about.step-1-subtext'|trans }}</p>
            </div>
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-users fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">{{ 'site.about.step-2-heading'|trans }}</h4>
                <p class="text-muted">{{ 'site.about.step-2-subtext'|trans }}</p>
            </div>
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-handshake-o fa-stack-1x fa-inverse"></i>
                </span>
                <h4 class="service-heading">{{ 'site.about.step-3-heading'|trans }}</h4>
                <p class="text-muted">{{ 'site.about.step-3-subtext'|trans }}</p>
            </div>
        </div>

        <div class="row text-center">
            <div class="col-lg-12 text-center">
                <p class="text-muted small">
                    {% trans with {'%link%': '<a href="' ~ path('history') ~ '">' ~ 'site.about.history-link-text'|trans ~ '</a>'} %}
                        site.about.history-link
                    {% endtrans %}
                </p>
            </div>
        </div>

    </div>
</section>
