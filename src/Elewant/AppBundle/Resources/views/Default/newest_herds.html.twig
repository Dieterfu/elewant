{% import 'ElewantAppBundle:Macros:utils.html.twig' as utils %}

<section id="newest_herds">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Newest Herds</h2>
                <h3 class="section-subheading text-muted">These are the latest additions to the world-wide herd</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    {% for herd in newest_herds %}
                        <li class="{% if loop.index is odd %}timeline-inverted{% endif %}">
                            <div class="timeline-image">
                                <img class="rounded-circle img-fluid" src="{{ asset('bundles/elewantapp/img/newest-herds/' ~ loop.index ~ '.jpg') }}" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4>{{ herd.formedOn|date('Y-m-d') }}</h4>
                                    <h4 class="subheading">
                                        <a href="{{ path('shepherd_admire_herd', {'username': herd.name }) }}">{{ utils.icon('external-link fa-fw') }}</a>
                                        {{ herd.name }}
                                    </h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted">
                                        {% for breed, count in herd.elePHPantBreedCounts|slice(0,4, true) %}
                                            - {{ ("herding.breed." ~ breed)|trans }}<br />
                                        {% else %}
                                            no ElePHPants yet...
                                        {% endfor %}
                                    </p>
                                </div>
                            </div>
                        </li>
                    {% endfor %}

                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <h4>Join<br>The<br>Herd!</h4>
                            {% else %}
                                <a class="text-white" href="{{ path('herd_tending') }}"><h4>Manage<br>Your<br>Herd!</h4></a>
                            {% endif %}
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</section>
