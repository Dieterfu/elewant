<section id="team" class="bg-faded">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Our Amazing Contributors</h2>
            </div>
        </div>

        <div class="row">
            {% for contributor in getContributors()|shuffle|slice(0,3) %}
                <div class="col-sm-4">
                    <div class="team-member">
                        <img src="{{ contributor.avatar_url }}" class="mx-auto rounded-circle" alt="">
                        <h4>{{ contributor.login }}</h4>
                        <p class="text-muted">({{ contributor.contributions }} contributions)</p>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row justify-content-md-center">
            <div class="col col-lg-10 text-center">
                <p class="large text-muted">You can find the repository on <a href="https://github.com/f500/elewant">github</a>, and become one of the awesome contributors in no time at all!<br /><br /></p>
            </div>
        </div>
    </div>
</section>
