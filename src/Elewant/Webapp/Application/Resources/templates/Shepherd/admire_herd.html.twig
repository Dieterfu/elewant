{% extends 'Layout/base.html.twig' %}

{% block content %}

    <section id="search">
        <div class="row">
            <div class="col-sm-4">
                <label class="sr-only" for="find-a-herd">{{ 'site.search'|trans }}</label>
                <input type="text" id="find-a-herd" class="form-control" placeholder="{{ 'site.search'|trans }}">
            </div>
        </div>
    </section>

    <section id="herd_tending">
        <h2 class="section-heading">{{ herd.name }}</h2>
        <h3 class="section-subheading">{{ 'shepherd.has.elephpants'|transchoice(herd.breeds.count) }}</h3>

        <div class="row">
            {% for breed in herd.breeds %}
                <div class="col-6 col-sm-4 col-lg-3">
                    {{ elephpant(breed, herd.filteredByBreed(breed).count) }}
                </div>
            {% endfor %}
        </div>
    </section>

    {% if not herd.desiredBreeds.isEmpty %}
        <section id="herd_desires">
            <h3 class="section-subheading">{{ 'shepherd.is.looking.for.breeds'|trans }}</h3>
            <div class="row">
                {% for breed in herd.desiredBreeds %}
                    <div class="col-6 col-sm-4 col-lg-3">
                        {{ elephpant(breed) }}
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}

{% endblock %}
